<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dateSelect.fragment_dateSelect">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/buttonPrevDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:rotation="+135"
            android:tint="@drawable/button_active_selector"
            app:srcCompat="@drawable/nav_arrow"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Сегодня"
                android:textColor="@color/colorTitle"
                android:textSize="25sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingTop="3dp"
                    android:text="среда, 15 мая"
                    android:textColor="@color/colorTextGrey"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/buttonDateSelect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_toRightOf="@id/textDate"
                    app:srcCompat="@drawable/calendar"
                    android:background="@null"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp" />


            </RelativeLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/buttonNextDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:rotation="-45"
            android:tint="@drawable/button_active_selector"
            app:srcCompat="@drawable/nav_arrow"/>

    </LinearLayout>

</FrameLayout>